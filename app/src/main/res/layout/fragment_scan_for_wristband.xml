<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    app:layout_insetEdge="none"
    tools:context=".ScanForWristbandFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/connectWristband"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="88dp"
            android:background="@drawable/inputbox"
            android:checked="false"
            android:text="Tilslut armbånd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wristbndIDtextfield" />

        <EditText
            android:id="@+id/wristbndIDtextfield"
            android:layout_width="307dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="516dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/inputbox"
            android:ems="10"
            android:hint="Indtast armbånds id"
            android:inputType="textPersonName"
            android:paddingLeft="12dp"
            android:textCursorDrawable="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/connectwristbandPicture"
            android:layout_width="359dp"
            android:layout_height="216dp"
            android:layout_marginTop="217dp"
            android:layout_marginBottom="298dp"
            android:src="@drawable/connectwristband"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/scanwristband"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:layout_marginTop="589dp"
            android:layout_marginBottom="88dp"
            android:background="@drawable/inputbox"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff="Søg efter armbånd"
            android:textOn="Søger"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/back_from_scanWristband"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="?attr/homeAsUpIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>