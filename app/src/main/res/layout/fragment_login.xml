<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frontpage2"
    tools:context=".LoginFragment">


    <TextView
        android:id="@+id/safe_mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"

        android:layout_marginTop="68dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/safe_mi"
        android:textColor="#000000"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/standard_margin_login"
        android:layout_marginLeft="@dimen/standard_margin_login"
        android:layout_marginEnd="@dimen/standard_margin_login"
        android:layout_marginRight="@dimen/standard_margin_login"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="examble@mail.com"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/standard_margin_login"
        android:layout_marginLeft="@dimen/standard_margin_login"
        android:layout_marginEnd="@dimen/standard_margin_login"
        android:layout_marginRight="@dimen/standard_margin_login"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="*******"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="@dimen/standard_margin_login"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="@dimen/standard_margin_login"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:drawableBottom="@drawable/button"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/pic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/safe_mi" />

</androidx.constraintlayout.widget.ConstraintLayout>
<!--</FrameLayout>-->

