<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/logoutfromSettings"

            android:layout_width="179dp"
            android:layout_height="47dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/inputbox"
            android:checked="false"
            android:text="Logout"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectWristbandSetbutton" />

        <ImageView
            android:id="@+id/back_from_settings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="?attr/homeAsUpIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/permissionsbutton"

            android:layout_width="307dp"
            android:layout_height="54dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/inputbox"
            android:checked="false"
            android:text="Tilladelse til adgang"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/passwordSetButton"

            android:layout_width="307dp"
            android:layout_height="54dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/inputbox"
            android:checked="false"

            android:text="Adgangskode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/permissionsbutton" />

        <Button
            android:id="@+id/connectWristbandSetbutton"

            android:layout_width="307dp"
            android:layout_height="54dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/inputbox"
            android:checked="false"
            android:text="ArmbÃ¥nd"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordSetButton" />

        <TextView
            android:id="@+id/settingstext"
            android:layout_width="173dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Indstillinger"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_from_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>